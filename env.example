# AI Marketplace Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# APP CONFIGURATION
# =============================================================================
APP_NAME=AI Marketplace
VERSION=1.0.0
DEBUG=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/ai_marketplace

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate a secure secret key: openssl rand -hex 32
SECRET_KEY=your-super-secret-jwt-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://your-domain.com

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# STRIPE PAYMENT CONFIGURATION
# =============================================================================
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# DIGITALOCEAN SPACES (FILE STORAGE)
# =============================================================================
# Get your keys from: https://cloud.digitalocean.com/account/api/spaces
DO_SPACES_KEY=your_spaces_key
DO_SPACES_SECRET=your_spaces_secret
DO_SPACES_BUCKET=your-bucket-name
DO_SPACES_REGION=nyc3
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# For Gmail: smtp.gmail.com
# For Outlook: smtp-mail.outlook.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# =============================================================================
# PHOENIX CHANNELS (WEBSOCKET)
# =============================================================================
PHOENIX_URL=ws://localhost:4000/socket

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# =============================================================================
# OPTIONAL: MONITORING & ANALYTICS
# =============================================================================
# Sentry for error tracking
SENTRY_DSN=your_sentry_dsn

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# Set to false in production
DEBUG=true
LOG_LEVEL=INFO
